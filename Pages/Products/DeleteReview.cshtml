@page
@model DeleteReviewModel

@{
    ViewData["Title"] = "Delete Review";
}

<h1>Delete</h1>
<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="ReviewId" class="control-label"></label>
                <select asp-for="ReviewId" asp-items="Model.Reviews" class="form-control">
                    <option value="">-- Select Review --</option>
                </select>
                <span asp-validation-for="ReviewId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete Review" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}