                <div class="form-group">
                    <label asp-for="CustomerName" class="control-label"></label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewReview" class="control-label"></label>
                    <textarea asp-for="NewReview" class="form-control"></textarea>
                    <span asp-validation-for="NewReview" class="text-danger"></span>
                </div>
                <div class="form-group">
                <input type="hidden" asp-for="ProductToReview" value="@Model.Product.ProductId" />
                <input type="submit" asp-page-handler="AddReview" asp-route-id="@Model.Product.ProductId" value="Add Review" class="btn btn-success btn-sm";>
                </div>
            </form>
        </div>
    </div>

