<h1 style="color:SeaGreen; font-family:Lucida Handwriting;"> Reviews </h1>
<hr />
@foreach(var r in Model.Product.Reviews)
{
    <dd class="col-sm-10">
        @Html.DisplayFor(model => r.Comment) - @Html.DisplayFor(model => r.CustomerName) (@Html.DisplayFor(model => r.Date))
    </dd>
    <dt class="col-sm-9">
        <form method="post">
            <input type="hidden" asp-for="ReviewToDelete" value="@r.ReviewId" />
            <input type="submit" asp-page-handler="DeleteReview" asp-route-id="@Model.Product.ProductId" value="Delete Review" class="btn btn-danger btn-sm" />
        </form>
    </dt>
    <p></p>
}


